{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["keryan-cazaban"],
    "baseUrl": "./",
    "paths": {
      // KCF
      // Front-end packages
      "@packages/kcf/utils/translation": ["packages/kcf/utils/translation/src/index.ts"],
      "@packages/kcf/homepage/feature-homepage": [
        "packages/kcf/homepage/feature-homepage/src/index.ts"
      ],
      "@packages/kcf/marketplace/feature-marketplace": [
        "packages/kcf/marketplace/feature-marketplace/src/index.ts"
      ],
      // Back-end packages
      "@packages/kcb/homepage": ["packages/kcb/homepage/src/index.ts"],

      // Shared packages
      "@packages/shared/components/cards": ["packages/shared/components/cards/src/index.ts"],
      "@packages/shared/utils/language-provider": [
        "packages/shared/utils/language-provider/src/index.ts"
      ],
      "@packages/shared/navigation/faded-navigation": [
        "packages/shared/navigation/faded-navigation/src/index.ts"
      ],
      "@packages/shared/navigation/sticky-navigation": [
        "packages/shared/navigation/sticky-navigation/src/index.ts"
      ],
      "@packages/shared/utils/intl-helper": ["packages/shared/utils/intl-helper/src/index.ts"]
    }
  }
}
